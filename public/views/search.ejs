<!-- views/searchResults.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Search Results</title>
    <link href="css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous" />
    <link href="css/sb-admin-2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">

</head>
<body id="app-background-image">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center mt-4">
                <h2 class="text-warning">Search Results</h2>
            </div>
        </div>
        <div class="row mt-5">
            <% tickets.forEach(function(ticket) { %>
                <div class="col-md-8 offset-md-2">
                    <div class="card">
                        <h5 class="card-header bg-orange text-black"><%= ticket.bandName %></h5>
                        <div class="card-body">
                            <p class="card-text">Ticket ID: <%= ticket.ticketID %></p>
                            <p class="card-text">Venue: <%= ticket.venue %></p>
                            <p class="card-text">City: <%= ticket.city %></p>
                            <p class="card-text">Country: <%= ticket.country %></p>
                            <button class="btn btn-black btn-block text-white">Buy</button>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="script/jquery.min.js"></script>
    <script src="script/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="script/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="script/sb-admin-2.min.js"></script>

    <script src="script/login_logic.js"></script>
      

</body>
</html>
